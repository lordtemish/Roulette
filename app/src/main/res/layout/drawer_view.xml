<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/drawerback"
    >
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="150dp"
                    android:src="@drawable/rabbit"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/labelImage"
                    android:src="@drawable/ic_peperoblack"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/labelImage"
                    android:layout_marginTop="20dp"
                    >

                    <TextView
                        android:id="@+id/gameTextView"
                        android:layout_width="150dp"
                        android:layout_height="45dp"
                        android:background="@drawable/button_back"
                        android:gravity="center"
                        android:text="Розыгрыш"
                        android:textColor="@color/white"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/settingsTextView"
                        android:layout_width="150dp"
                        android:layout_height="45dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/button_darkback"
                        android:gravity="center"
                        android:text="Настройки"
                        android:textColor="@color/white"
                        android:textSize="17sp" />

                </LinearLayout>
            <TextView
                    android:id="@+id/logout"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_cancelback"
                android:gravity="center"
                android:text="Выйти"
                android:textColor="@color/white"
                android:textSize="17sp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="50dp"/>
        </android.support.constraint.ConstraintLayout>
</FrameLayout>