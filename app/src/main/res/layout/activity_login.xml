<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@drawable/ic_background"
    >
        <android.support.constraint.ConstraintLayout
            android:layout_width="637dp"
            android:layout_height="400dp"
            android:background="@drawable/drawerbackgr"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="50dp"
            >
            <LinearLayout
                android:id="@+id/infoLayout"
                app:layout_goneMarginTop="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/login"
                    android:layout_width="250dp"
                    android:layout_height="36dp"
                    android:background="@drawable/lightgrey_page"
                    android:inputType="text"
                    android:textSize="21sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:hint="Логин"
                    android:textColor="@color/black"
                    android:textColorHint="@color/darkgrey"
                    />
                <EditText
                    android:layout_marginTop="20dp"
                    android:id="@+id/password"
                    android:layout_width="250dp"
                    android:layout_height="36dp"
                    android:background="@drawable/lightgrey_page"
                    android:inputType="textPassword"
                    android:textSize="21sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:hint="Пароль"
                    android:textColor="@color/black"
                    android:textColorHint="@color/darkgrey"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/gameTextView"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:background="@drawable/button_back"
                android:gravity="center"
                android:text="Войти"
                android:textColor="@color/white"
                android:textSize="21sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/infoLayout"
                app:layout_constraintStart_toStartOf="@+id/infoLayout"
                android:layout_marginBottom="50dp"

                />
        </android.support.constraint.ConstraintLayout>
        <com.dynamica.lordtemich.roulette.Fragments.ProgressView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/progressView"
            android:visibility="gone"
            />
</android.support.constraint.ConstraintLayout>